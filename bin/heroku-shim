#!/bin/sh

set -e

export ELASTICSEARCH_URL="${BONSAI_URL}:443"
export BROKER_URL="${CLOUDAMQP_URL}"

export MANDRILL_HOST="${MAILGUN_SMTP_SERVER}"
export MANDRILL_PORT="${MAILGUN_SMTP_PORT}"
export MANDRILL_USERNAME="${MAILGUN_SMTP_LOGIN}"
export MANDRILL_APIKEY="${MAILGUN_SMTP_PASSWORD}"
if [ -z "${MAIL_DEFAULT_SENDER}" ]; then
  export MAIL_DEFAULT_SENDER="h@${MAILGUN_DOMAIN}"
fi

exec "$@"
