{
  "name": "Hypothes.is",
  "version": "${version}",
  "manifest_version": 2,

  "description": "The Internet, peer reviewed.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "homepage_url": "https://hypothes.is/",
  "incognito": "split",

  "offline_enabled": false,
  "permissions": [
    "<all_urls>",

    "clipboardWrite",
    "contentSettings",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ],
  "content_scripts": [{
      "matches": [
          "*://*/*.pdf*",
          "*://*/*.PDF*"
       ],
       "css": ["hide-xhtml-error.css"]
  }],
  "content_security_policy":
    "script-src 'self' 'unsafe-eval' ${src} https://ajax.googleapis.com; object-src 'self'",

  "background": {
    "persistent": true,
    "scripts": ["pdfHandler.js", "pdfHandler-local.js", "js/background.js"]
  },
  "page_action": {
    "placeholder": "work around http://crbug.com/86449"
  },
  "web_accessible_resources": [
    "public/*",
    "content/*",
    "patch-worker.js"
  ]
}
