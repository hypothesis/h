{
  "name": "Hypothes.is",
  "version": "${version}",
  "manifest_version": 2,

  "description": "The Internet, peer reviewed.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "homepage_url": "https://hypothes.is/",

  "offline_enabled": false,
  "permissions": [
    "<all_urls>",

    "clipboardWrite",
    "contentSettings",
    "tabs",
    "fileBrowserHandler",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "webNavigation"
  ],
  "content_security_policy":
    "script-src 'self' 'unsafe-eval' ${src}; object-src 'self'",

  "file_browser_handlers": [{
     "id": "open-as-pdf",
     "default_title": "Open with Hypothes.is",
     "file_filters": [
       "filesystem:*.pdf"
     ]
  }],
  "background": {
    "persistent": true,
    "scripts": [
	"feature-detect.js",
	"extension-router.js",
	"background.js"
    ]
  },
  "incognito": "split",
  "page_action": {
    "placeholder": "work around http://crbug.com/86449"
  },
  "web_accessible_resources": [
    "public/*",
    "getFrameId",
    "content/web/viewer.html",
    "http:/*",
    "https:/*",
    "ftp:/*",
    "file:/*",
    "chrome-extension:/*",
    "filesystem:/*",
    "drive:*"
  ]
}
