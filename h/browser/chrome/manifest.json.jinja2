{
  "name": "Hypothesis - Web & PDF Annotation",
  "short_name": "Hypothesis",
  "version": "{{ version }}",
  "version_name": "{{ version }} ({{ version_name }})",
  "manifest_version": 2,

  "description": "Collaboratively annotate, highlight, and tag web pages and PDF documents.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "homepage_url": "https://hypothes.is/",
  "incognito": "split",

  "offline_enabled": false,
  "permissions": [
    "<all_urls>",

    "contentSettings",
    "tabs"
  ],
  "content_security_policy":
    "script-src 'self' 'unsafe-eval' {{ src }} https://cdn.mathjax.org; object-src 'self'; font-src 'self' data:;",

  "background": {
    "persistent": true,
    "scripts": [
      "/settings-data.js",
      "lib/extension-bundle.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/browser-icon-inactive.png",
      "38": "images/browser-icon-inactive@2x.png"
    }
  },
  "web_accessible_resources": [
    "public/*",
    "content/*",
    "lib/*",
    "help/*",
    "content/web/viewer.html"
  ]
}
