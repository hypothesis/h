{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "JSON API objects",
    "description": "JSON API schema with a few custom additions",

    "$defs": {
        "document": {
            "type": "object",
            "properties": {
                "data": {
                    "$comment": "Data can be an array, but we never do that",
                    "$ref":  "#/$defs/resourceObject"
                },
                "meta": {"$ref": "#/$defs/metaData"}
            },
            "required": ["data"],
            "additionalProperties": false,

            "examples": [
                {
                    "data": {
                        "type": "my_type"
                    },
                    "meta": {
                        "custom": "values"
                    }
                }
            ]
        },

        "relationships": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "data": {"$ref": "#/$defs/resourceIdentifier"}
                },
                "additionalProperties": false,
                "required": ["data"]
            },

            "examples": [
                {
                    "custom_relation": {
                        "data": {"type":  "some_type", "id": "12325"}
                    }
                }
            ]
        },

        "resourceObject": {
            "type": "object",
            "properties": {
                "id": {"type": "string"},
                "type": {"type": "string"},
                "attributes": {"type": "object"},
                "relationships": {"$ref": "#/$defs/relationships"},
                "meta": {"$ref": "#/$defs/metaData"}
            },
            "required": ["type"],
            "additionalProperties": false,

            "examples": [
                {
                    "id": "123556",
                    "type": "my_type",
                    "attributes": {
                        "custom": "values"
                    },
                    "meta": {
                        "custom": "values"
                    }
                }
            ]
        },

        "metaData": {
            "type": "object",

            "examples": [
                {
                    "custom": "values"
                }
            ]
        },

        "resourceIdentifier": {
            "type": "object",
            "properties": {
                "id": {
                    "oneOf": [
                        {"type": "string"},
                        {
                            "$comment": "This is a custom extension to JSON API",
                            "$ref": "core.json#/$defs/anchorReference"
                        }
                    ]
                },
                "type": {"type": "string"}
            },
            "required": ["id", "type"],

            "examples": [
                {"type":  "my_type", "id": "concrete"},

                {"type":  "my_type", "id": {"$ref": "our_addition"}}
            ]
        }
    }
}