{% extends "h:templates/layouts/account.html.jinja2" %}

{% set page_route = 'account' %}
{% set page_title = 'Account' %}

{% block page_content %}
  <div class="form-vertical">
    {% if add_password_form %}
      {{ add_password_form }}
    {% else %}
      {{ email_form }}
      {{ password_form }}
    {% endif %}
  </div>

  {% if orcid_url %}
    <h3>ORCID connected: <a href="{{ orcid_url }}">{{ orcid }}</a></h3>
  {%  else %}
    <a class="btn" href="{{ request.route_path('orcid.oauth.authorize') }}">{% trans %}Connect with ORCID{% endtrans %}</a>
    <p class="text">Connecting your ORCID enables you to log in to Hypothesis with ORCID, instead of your Hypothesis password.</p>
  {% endif %}
{% endblock page_content %}

{% block form_footer_right %}
<a class="link--footer" href="{{ request.route_path('account_delete') }}">{% trans %}Delete your account{% endtrans %}</a>
{% endblock %}
