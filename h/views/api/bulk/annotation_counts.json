{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Bulk assignment stats",
  "properties": {
    "filter": {
      "$ref": "#/$defs/filter"
    },
    "group_by": {
      "type": "string",
      "enum": [
        "assignment",
        "user"
      ]
    }
  },
  "required": [
    "filter",
    "group_by"
  ],
  "additionalProperties": true,
  "$defs": {
    "filter": {
      "title": "Filter query",
      "description": "The filters to search for the annotations by",
      "type": "object",
      "properties": {
        "groups": {
          "$ref": "#/$defs/nonEmptyStringArray"
        },
        "h_userids": {
          "$ref": "#/$defs/nonEmptyStringArray"
        },
        "assignment_id": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "groups"
      ],
      "additionalProperties": false
    },
    "nonEmptyStringArray": {
      "type": [
        "array"
      ],
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  }
}
