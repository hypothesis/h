{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "authority": {
      "type": "string",
      "format": "hostname"
    },
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^[A-Za-z0-9._]+$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "display_name": {
      "type": "string",
      "maxLength": 30
    },
    "identities": {
      "type": "array",
      "items": {
          "type": "object",
          "properties": {
              "provider": {
                  "type": "string",
              },
              "provider_unique_id": {
                  "type": "string",
              },
          },
          "required": [
              "provider",
              "provider_unique_id",
          ]
      },
  },
  },
  "required": [
    "authority",
    "username",
    "email"
  ]
}
